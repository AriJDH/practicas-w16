//Búsqueda de todos los documentos disponibles en el índice
GET zapatillas/_search

//Búsqueda de documentos entregando el modelo de zapatilla como parámetro
GET zapatillas/_search
{
    "query":{
        "match":{
            "modelo": "Jolt"
        }
    }
}

//Eliminar un documento del índice entregando un criterio de búsqueda
POST zapatillas/_delete_by_query
{
    "query":{
        "match":{
            "modelo": "Jolt"
        }
    }
}

//Modificar el precio de un modelo de zapatillas indicando el id
POST /zapatillas/_update/yUkw8IIBJ45IbOiSlBju/
{
    "doc" : {
        "precio" : 69990
    }
}